@model Campaign.Core.Identity.Models.ClientModels.GetResponse
@{
    ViewData["Title"] = "用户管理";
}
<div class="ui grid container">
    <div class="row">
        <div class="column">
            <div class="ui breadcrumb">
                <a href="/Manage" class="section">首页</a>
                <div class="divider"> / </div>
                <div class="active section">Client管理</div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="two wide column">
            <a class="ui button" asp-action="Create">创建Client</a>
        </div>
        <div class="ten wide column">
            <div class="ui form">
                <div class="fields">
                    <div class="field">
                        <div class="ui category search">
                            <div class="ui icon input">
                                <input class="prompt" type="text">
                                <i class="search icon"></i>
                            </div>
                            <div class="results"></div>
                        </div>
                    </div>
                    

                </div>
            </div>
        </div>
        <div class="two wide column">
            <a class="ui button"><i class="search icon"></i> 查询</a>
        </div>
        <div class="two wide column">
            <div class="ui buttons">
                <button class="ui button"><i class="left chevron icon"></i></button>
                <div class="or"></div>
                <button class="ui button"><i class="right chevron icon"></i></button>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="column">
            <table class="ui form selectable sortable compact celled striped definition table">
                <thead>
                    <tr>
                        <th>标识</th>
                        <th class="sorted ascending">应用</th>
                        <th>应用ID</th>
                        <th>应用网址</th>
                        <th>状态</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var r in Model.clients)
                    {
                        <tr>
                            <td>@r.Id</td>
                            <td>
                                <h4 class="ui image header">
                                    <img src="@r.LogoUri" class="ui mini rounded image" />
                                    <div class="content">
                                        @r.ClientName
                                        <div class="sub header">
                                            @string.Join(",", r.AllowedGrantTypes.Select(x => x.GrantType))
                                        </div>
                                    </div>
                                </h4>
                            </td>
                            <td>@r.ClientId</td>
                            <td>@r.ClientUri</td>
                            <td>@r.Enabled</td>
                            <td class="right aligned">
                                <a asp-action="Edit" asp-route-id="@r.Id" class="tiny ui basic button">编辑</a>
                                <a asp-action="Details" asp-route-id="@r.Id" class="tiny ui basic button">详情</a>
                                <a asp-action="Delete" asp-route-id="@r.Id" class="tiny ui basic button">删除</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    <div class="row">
        <div class="eight wide column">
            <div class="ui left floated pagination menu">
                <a class="icon item">
                    <i class="left chevron icon"></i>
                </a>
                <a class="item">1</a>
                <a class="item">2</a>
                <a class="item">3</a>
                <a class="item">4</a>
                <a class="icon item">
                    <i class="right chevron icon"></i>
                </a>
            </div>
        </div>
        <div class="eight wide column">
        </div>
    </div>
</div>
@section Scripts{
    <script type="text/javascript">
            $(function () {
                $('.ui.dropdown').dropdown();
            })
    </script>
}
